      KindEditor.ready(function(K) {
        var editor = K.editor({
          fileManagerJson : '/kindeditor/images_list'
        });
        K('#filemanager').click(function() {
          editor.loadPlugin('filemanager', function() {
            editor.plugin.filemanagerDialog({
              viewType : 'VIEW',
              dirName : 'image',
              clickFn : function(url, title) {
                K('#url').val(url);
                editor.hideDialog();
              }
            });
          });
        });
      });
      </script>